@using shanuMVCUserRoles.Models.Shop
@model IEnumerable<ProductViewModel>

<div class="banner_inner">
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">
            <ul class="short">
                <li>
                    @Html.ActionLink("TRANG CHỦ", "Index", "Home")
                    <i>|</i>
                </li>
                <li> DANH DÁCH SẢN PHẨM </li>
                @if (!string.IsNullOrEmpty(ViewBag.CategoryName))
                {
                    <li>
                        <i>|</i>
                        @ViewBag.CategoryName
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
    <div class="container-fluid">
        <div class="inner-sec-shop px-lg-4 px-3">
            <div class="row">
                <div class="left-ads-display col-lg-12">
                    <div class="wrapper_top_shop">
                        <div class="row my-lg-3 my-0">
                            @if(Model.Count() > 0){
                                foreach (var item in Model)
                                {
                                    <div class="col-md-3 product-men women_two shop-gd">
                                        <div class="product-googles-info googles">
                                            <div class="men-pro-item">
                                                <div class="men-thumb-item">
                                                    <img src="../../Images/Products/@item.Id/@item.Image" class="img-fluid" alt="">
                                                    <div class="men-cart-pro">
                                                        <div class="inner-men-cart-pro">
                                                            <div class="link-product-add-cart" data-id="@item.Id">Xem chi tiết</div>
                                                            @*@Html.ActionLink("Xem chi tiết", "ProductDetails", "Shop", new { id = @item.Id}, new { @class = "link-product-add-cart" })*@
                                                        </div>
                                                    </div>
                                                    <span class="product-new-top">New</span>
                                                </div>
                                                <div class="item-info-product">
                                                    <div class="info-product-price">
                                                        <div class="grid_meta">
                                                            <div class="product_price">
                                                                <h4>
                                                                    @item.Name
                                                                    @*@Html.ActionLink(@item.Name, "ProductDetails", "Shop", new { id = @item.Id }, new { })*@
                                                                </h4>
                                                                <div class="grid-price mt-2">
                                                                    <span class="money ">@item.Price VND</span>
                                                                </div>
                                                            </div>
                                                            <ul class="stars">
                                                                <li>
                                                                    <a href="#">
                                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#">
                                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#">
                                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#">
                                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a href="#">
                                                                        <i class="fa fa-star-half-o" aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                        <div class="googles single-item hvr-outline-out">
                                                            <form action="#" method="post">
                                                                <input type="hidden" name="cmd" value="_cart">
                                                                <input type="hidden" name="add" value="-1">
                                                                <input type="hidden" name="googles_item" value="@item.Name">
                                                                <input type="hidden" name="amount" value="@item.Price">
                                                                <input type="hidden" name="productid" value="@item.Id">
                                                                <button type="submit" class="googles-cart pgoogles-cart">
                                                                    <i class="fas fa-cart-plus"></i>
                                                                </button>
                                                            </form>

                                                        </div>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }else{
                                <h3>@ViewBag.NoRecord</h3>
                            }
                        </div>
                    </div>
                </div>
                <!--//product right-->
            </div>
            <!--/slide-->
            @if(ViewBag.IsFeaturedProductsDisplay == true){
                <div class="slider-img mid-sec mt-lg-5 mt-2">
                    <!--//banner-sec-->
                    <h3 class="tittle-w3layouts text-left my-lg-4 my-3">Sản Phẩm khác</h3>
                    <div class="mid-slider">
                        <div class="owl-carousel owl-theme row">
                            @foreach (var item in ViewBag.listProductOther)
                            {
                                <div class="item">
                                    <div class="gd-box-info text-center">
                                        <div class="product-men women_two bot-gd">
                                            <div class="product-googles-info slide-img googles">
                                                <div class="men-pro-item">
                                                    <div class="men-thumb-item">
                                                        <img src="../../Images/Products/@item.Id/@item.Image" class="img-fluid" alt="">
                                                        <div class="men-cart-pro">
                                                            <div class="inner-men-cart-pro">
                                                                <div class="link-product-add-cart" data-id="@item.Id">Xem chi tiết</div>
                                                                @*@Html.ActionLink("Xem chi tiết", "ProductDetails", "Shop", new { id = @item.Id }, new { @class = "link-product-add-cart" })*@
                                                            </div>
                                                        </div>
                                                        <span class="product-new-top">New</span>
                                                    </div>
                                                    <div class="item-info-product">

                                                        <div class="info-product-price">
                                                            <div class="grid_meta">
                                                                <div class="product_price">
                                                                    <h4>
                                                                        @*<a href="single.html">Fastrack Aviator </a>*@
                                                                        @item.Name
                                                                    </h4>
                                                                    <div class="grid-price mt-2">
                                                                        <span class="money ">@item.Price VND</span>
                                                                    </div>
                                                                </div>
                                                                <ul class="stars">
                                                                    <li>
                                                                        <a href="#">
                                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#">
                                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#">
                                                                            <i class="fa fa-star" aria-hidden="true"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#">
                                                                            <i class="fa fa-star-half-o" aria-hidden="true"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="#">
                                                                            <i class="fa fa-star-o" aria-hidden="true"></i>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <div class="googles single-item hvr-outline-out">
                                                                <form action="#" method="post">
                                                                    <input type="hidden" name="cmd" value="_cart">
                                                                    <input type="hidden" name="add" value="-1">
                                                                    <input type="hidden" name="googles_item" value="@item.Name">
                                                                    <input type="hidden" name="amount" value="@item.Price">
                                                                    <input type="hidden" name="productid" value="@item.Id">
                                                                    <button type="submit" class="googles-cart pgoogles-cart">
                                                                        <i class="fas fa-cart-plus"></i>
                                                                    </button>
                                                                </form>

                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            <!--//slider-->
        </div>
    </div>
</section>