@model shanuMVCUserRoles.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row">
    <div class="col-md-8" style="margin:auto">
        <section id="loginForm">
            <div class="login p-5 bg-dark mx-auto mw-100" style="margin-bottom:2%">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 style="color:#ff4e00;">Reset your password.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Reset</button><br />
                }
            </div>
        </section>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")
