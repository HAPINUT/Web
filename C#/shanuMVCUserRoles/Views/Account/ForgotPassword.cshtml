@model shanuMVCUserRoles.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}

<div class="row">
    <div class="col-md-8" style="margin:auto">
        <section id="loginForm">
            <div class="login p-5 bg-dark mx-auto mw-100" style="margin-bottom:2%">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 style="color:#ff4e00;">Vui lòng nhập email</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Xác Nhận</button><br />
                }
            </div>
        </section>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")